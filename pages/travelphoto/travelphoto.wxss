/* pages/travelphoto/travelphoto.wxss */

page {
  background: #f5f5f5;
}

.travel-title-container {
  text-align: center;
}

.travel-title {
  font-weight: bold;
  font-size: 50rpx;
}

.scroll-x {
  height: 40px;
  white-space: nowrap;
}

.hide-radio {
  display: none;
}

.label-label {
  padding: 0 30rpx;
  font-weight: 300;
  font-size: 40rpx;
}

.radio-label-default-container {
  margin: 10rpx;
  border-radius: 30rpx;
  display: inline-block;
  padding: 5rpx 0;
  line-height: 50rpx;
}

.radio-label-check-container {
  border: 1rpx solid #3ab8f4;
  background: linear-gradient(to right, #75c9f0, #0385c2);
}

.radio-label-container {
  border: 1rpx solid #bbb;
}

.travel-photo-list {
}

.travel-photo-item {
  width: 41%;
  display: inline-block;
  margin: 10rpx 2%;
  padding: 2%;
  background: white;
}

.travel-photo-image {
  width: 100%;
  height: 300rpx;
  border-radius: 10rpx;
}

.travel-photo-content-container {
}

.travel-photo-content-description-container {
  line-height: 30rpx;
}

.travel-photo-content-description {
  font-weight: 200;
  font-size: 25rpx;
}

.travel-photo-content-customer {
  width: 100%;
  height: 50rpx;
}

.travel-photo-content-image-container {
  float: left;
}

.travel-photo-content-image {
  width: 50rpx;
  height: 40rpx;
}

.travel-photo-content-customer-name-container {
  height: 100%;
  line-height: 40rpx;
  margin: 0;
  padding: 0;
  vertical-align: middle;
  float: left;
}

.travel-photo-content-customer-name {
  font-size: 20rpx;
  font-weight: 200;
}

.travel-photo-content-customer-praise-container {
  float: right;
  font-size: 20rpx;
  font-weight: 200;
  height: 100%;
  line-height: 50rpx;
  vertical-align: middle;
}
